{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet build",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run tests with coverage",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "test",
                "tests/unit/Integration.Events.Tests",
                "/p:CollectCoverage=true",
                "/p:Exclude=[*.Tests]*"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always"
            },
        },
        {
            "label": "run sonarqube server",
            "command": "docker",
            "type": "shell",
            "args": [
                "run",
                "-d",
                "--name",
                "sonarqube",
                "-p",
                "9000:9000",
                "-p",
                "9092:9092",
                "sonarqube",
            ],
            "group": "none",
            "presentation": {
                "reveal": "always"
            },
        }
    ]
}